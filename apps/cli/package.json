{
  "name": "@ralphy/cli",
  "version": "1.0.0",
  "description": "CLI tool implementing the Ralph Wiggum technique for AI-assisted development",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "ralphy": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "cli",
    "linear",
    "jira",
    "ai",
    "development",
    "automation"
  ],
  "license": "ISC",
  "dependencies": {
    "@ralphy/shared": "workspace:*",
    "@linear/sdk": "^70.0.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "dotenv": "^16.4.0",
    "execa": "^9.6.1",
    "inquirer": "^12.3.2",
    "jira.js": "^5.2.2",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^22.0.0",
    "tsx": "^4.19.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  }
}
