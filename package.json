{
  "name": "ralphy",
  "private": true,
  "description": "CLI tool implementing the Ralph Wiggum technique for AI-assisted development",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "build": "bun run build:shared && bun run build:cli",
    "build:shared": "bun run --cwd packages/shared build",
    "build:cli": "bun run --cwd apps/cli build",
    "dev": "bun run --cwd apps/cli dev",
    "test": "bun run build:shared && bun test",
    "typecheck": "bun run build:shared && tsc --noEmit -p apps/cli",
    "clean": "rm -rf packages/shared/dist apps/cli/dist node_modules",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "bun run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
